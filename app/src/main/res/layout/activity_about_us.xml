<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.Material3.ActionBar"
            android:title="About Us"
            android:titleTextColor="@android:color/white" />


        <!-- Gradient Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/header_gradient"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2056B1"
                android:gravity="center" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:src="@drawable/choc_logo"
                android:contentDescription="CHOC Logo"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_bg"
                android:elevation="6dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- FIXED Card: What is CHOC -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is CHOC ?"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2056B1" />

            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#2056B1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Childhood Cancer Foundation SA"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non-profit organisation that advocates for the health and well-being of children and teenagers diagnosed with cancer or life-threatening blood disorders and their families.\n\nThe passionate and dedicated staff and volunteers of CHOC aim to save lives through early detection and comprehensive support programmes for the families affected by cancer.\n\nWe offer psychosocial, emotional and practical support as we augment the different medical fraternities."
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where We Keep Hope Alive"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHOC has a national office in Johannesburg, and six regional offices offering services and support to the nine provinces of South Africa.\n\nThe regions are demographically positioned to ensure that we reach every child and family battling cancer in South Africa."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>



        <!-- Decorative Ribbon -->
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/gold_ribbon"
            android:contentDescription="Gold Ribbon"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_bg"
            android:elevation="6dp"
            android:padding="8dp" />

        <!-- Section: History -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="#E6EEF9"
            android:padding="20dp"
            android:elevation="3dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How CHOC Childhood Cancer Foundation Started and where we are now ?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2056B1"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/choc_founder"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:contentDescription="CHOC Founder"
                android:background="@drawable/rounded_bg"
                android:elevation="6dp"
                android:padding="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In 1977, Sister Sadie Cutland’s daughter, Hillary, was diagnosed with aplastic anaemia. After years without meeting another parent in a similar situation, Sadie was inspired—thanks to Professor MacDougal—to start a support group for families. In 1979, CHOC was born. What began as a small group of volunteers has grown into South Africa’s leading childhood cancer organisation, providing emotional support, accommodation, transport, and care to thousands of families across the country."
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Bottom Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
</ScrollView>
