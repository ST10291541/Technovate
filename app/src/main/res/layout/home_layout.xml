<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with CHOC Logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/chocHomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHOC Home Page"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/chocLogo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/choc_logo"
                android:contentDescription="CHOC Logo"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <!-- Large CHOC Mascot Image -->
        <ImageView
            android:id="@+id/chocMascot"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/choc_cow"
            android:scaleType="centerCrop"
            android:contentDescription="CHOC Mascot"
            android:layout_marginBottom="24dp" />

        <!-- "Get Involved" Text Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_block"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Involved"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supporting CHOC in our mission to provide care and support to children with cancer comes in many forms. We welcome your support! Find out how you can get involved with CHOC."
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingMultiplier="1.2" />
        </LinearLayout>

        <!-- Action Buttons Grid (now with only 2 buttons) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="24dp">

            <!-- Events Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_block"
                android:padding="16dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/events_icon"
                    android:contentDescription="Events"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/eventsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_button" />
            </LinearLayout>

            <!-- Info Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_block"
                android:padding="16dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/info_icon"
                    android:contentDescription="Information"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/infoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn More"
                    android:backgroundTint="#9C27B0"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_button" />
            </LinearLayout>
        </GridLayout>

        <!-- Golden Ribbon at Bottom -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/goldenRibbon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/gold_ribbon"
                android:contentDescription="Childhood Cancer Awareness Ribbon"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>