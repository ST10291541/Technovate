<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewEvents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:id="@+id/linearLayoutEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewEventsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events:"
            android:textSize="24sp"

            android:textColor="#095E8C"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Event Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageViewEvent"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sanipass"/>


                <TextView
                    android:id="@+id/textViewEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="CHOC Walk Up Sani Pass"
                    android:textSize="20sp"
                    android:textColor="#095E8C"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="This year, we eagerly embark on our 16th CHOC Walk Up Sani Pass, standing united with children and teenagers who bravely face cancer or life-threatening blood disorders, alongside their families."
                    android:textSize="14sp"
                    android:textColor="#616161" />

                <TextView
                    android:id="@+id/textViewEventDateLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="9 August 2025 - Sani Pass"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <Button
                    android:id="@+id/buttonVolunteer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Volunteer"
                    android:backgroundTint="#095e8c"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    style="?android:attr/buttonBarButtonStyle"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Event Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageViewEventTwo"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/peadelimage"/>


                <TextView
                    android:id="@+id/textViewCycleEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Cyclethon Canal Walk"
                    android:textSize="20sp"
                    android:textColor="#095E8C"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewCycleEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pedal With Purpose â€“ Book Your Seat at the 2025 Cyclethon for just R160!"
                    android:textSize="14sp"
                    android:textColor="#616161" />

                <TextView
                    android:id="@+id/textViewCycleEventDateLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="23 August 2025 - Canal Walk Shopping Centre"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <Button
                    android:id="@+id/buttonCycleVoluntee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Volunteer"
                    android:backgroundTint="#095E8C"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    style="?android:attr/buttonBarButtonStyle"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

