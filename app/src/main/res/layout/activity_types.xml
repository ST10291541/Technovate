<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewEvents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:id="@+id/llInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="TYPES OF CANCER"
            android:textAlignment="center"
            android:textColor="#1DA1F2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Uniform Buttons -->
        <Button
            android:id="@+id/btnLeukemia"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="LEUKEMIA"
            android:backgroundTint="#FF6600"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnBrain"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="BRAIN TUMOR"
            android:backgroundTint="#FFC300"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnLymphomas"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="LYMPHOMAS"
            android:backgroundTint="#A5D252"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnWilms"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="NEPHROBLASTOMA"
            android:backgroundTint="#0093d1"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnSarcoma"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:text="SOFT TISSUE SARCOMA"
            android:backgroundTint="#ff6699"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:layout_gravity="center" />

        <!-- ImageView centered and spaced -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/types"
            android:layout_gravity="center" />

        <!-- Back button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#439A39"
            android:text="Back"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
