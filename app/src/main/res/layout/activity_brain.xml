<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewEvents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f1fcfc">

    <LinearLayout
        android:id="@+id/llBrain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvBrainLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/Brain_Label"
            android:textAlignment="center"
            android:textColor="#1DA1F2"
            android:textSize="14pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBrainInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="@string/Brain_Info"
            android:textAlignment="center"
            android:textColor="#7F7F7F"
            android:textSize="6pt" />

    </LinearLayout>
</ScrollView>